# ==============================================================================
# Django SSO - Environment Configuration Template
# ==============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)
# ==============================================================================

# ------------------------------------------------------------------------------
# Django Core Settings
# ------------------------------------------------------------------------------

# SECRET_KEY: Django secret key for cryptographic signing (REQUIRED in production)
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# Or: python -c 'import secrets; print(secrets.token_urlsafe(50))'
# MUST be at least 50 characters
SECRET_KEY=k7sc6o353wilp8uul#=p_=7#bw^zhj352yfo*ubs$0f0f_4bk4

# DEBUG: Enable debug mode (MUST be False in production)
DEBUG=True

# ALLOWED_HOSTS: Comma-separated list of allowed hostnames (REQUIRED when DEBUG=False)
# Example: sso.barge2rail.com,www.sso.barge2rail.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------

# DATABASE_URL: PostgreSQL connection string (optional, defaults to SQLite)
# Format: postgresql://user:password@host:port/database
# Render provides this automatically in production
# DATABASE_URL=postgresql://user:password@localhost:5432/barge2rail_sso

# ------------------------------------------------------------------------------
# Google OAuth (REQUIRED)
# ------------------------------------------------------------------------------

# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# BASE_URL: Your application's base URL (used for OAuth redirects)
# Production: https://sso.barge2rail.com
# Development: http://127.0.0.1:8000
BASE_URL=http://127.0.0.1:8000

# ------------------------------------------------------------------------------
# Security Settings
# ------------------------------------------------------------------------------

# CSRF_TRUSTED_ORIGINS: Comma-separated list of trusted origins for CSRF
# REQUIRED in production for cross-origin requests
# Must include protocol (https://)
# Example: https://sso.barge2rail.com,https://admin.barge2rail.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ------------------------------------------------------------------------------
# CORS Settings
# ------------------------------------------------------------------------------

# CORS_ALLOWED_ORIGINS: Comma-separated list of allowed CORS origins
# Include all frontend applications that need to access this API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,https://sso.barge2rail.com,https://admin.barge2rail.com

# CORS_ALLOW_ALL_ORIGINS: Allow all origins (ONLY for development, NEVER in production)
CORS_ALLOW_ALL_ORIGINS=False

# ------------------------------------------------------------------------------
# Logging (Optional)
# ------------------------------------------------------------------------------

# DJANGO_LOG_LEVEL: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Recommended: INFO for production, DEBUG for development
DJANGO_LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# SSO Validation (Development/Testing)
# ------------------------------------------------------------------------------

# SSO_VALIDATION_URL: URL for SSO token validation (for testing)
SSO_VALIDATION_URL=http://localhost:8900/mock/validate

# ==============================================================================
# Production Deployment Checklist
# ==============================================================================
# Before deploying to production, ensure:
#
# [ ] SECRET_KEY is set to a strong, unique value (at least 50 characters)
# [ ] DEBUG=False
# [ ] ALLOWED_HOSTS includes your production domain
# [ ] DATABASE_URL is set (Render provides this)
# [ ] GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET are production credentials
# [ ] BASE_URL is set to https://your-production-domain.com
# [ ] CSRF_TRUSTED_ORIGINS includes https://your-production-domain.com
# [ ] CORS_ALLOWED_ORIGINS is restricted to your actual frontend domains
# [ ] CORS_ALLOW_ALL_ORIGINS=False
# ==============================================================================
